  "devDependencies": {
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "live-server": "^1.2.2",
    "prettier": "^2.8.3",
    "sass": "^1.58.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3"
  },
  "lint-staged": {
    "*.js": [
